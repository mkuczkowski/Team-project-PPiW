{{#if product }}
<div class="row container form-box" style="width: 550px;">
        <h3 align="center"><i class="fas fa-edit"></i> Edit {{product.title}}</h3>
        <form action="/product/{{product._id}}?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="imagePath" placeholder="Image URL" value="{{product.imagePath}}" required>
            </div>
            <div class="form-group">
            <input type="text" class="form-control" name="title" placeholder="Title" value="{{product.title}}" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="cover" placeholder="Cover URL" value="{{product.cover}}" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="trailer" placeholder="Trailer URL (YouTube embed)" value="{{product.trailer}}" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="description" placeholder="Description" style="max-width: 100%; min-width: 100%; height: 110px;"
                required>{{product.description}}</textarea>
            </div>
            <div class="form-group">
                <input type="number" min="1" placeholder="Price (in â‚¬)" name="price" style="width: 100%; padding: 3%; color:black;" value={{product.price}} required>
            </div>
            <button type="submit" class="btn btn-lg btn-info" style="width: 100%; height: 50%;">Update <i class="far fa-share-square"></i></button>
        </form>
</div>
{{/if}}