{{# if products }}
<div class="row container form-box" style="margin-top: 1%;">
<form action="/checkout" method="POST" class="form-horizontal" >
  <div class="form-group">
    <div class="col-sm-12">
      <span class="label label-primary">PPiW Shop Bank Account</span>
      <input type="text" class="form-control" name="bankInfo" value="0000 0712 1981 2874" readonly>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <input type="text" class="form-control" name="fullName" placeholder="Full name" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <input type="email" class="form-control" name="email" placeholder="E-mail" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <input type="text" class="form-control" name="city" placeholder="City" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <input type="text" class="form-control" name="address" placeholder="Address" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <span class="label label-primary">Price to pay (in â‚¬)</span>
      <input type="number" class="form-control" name="totalPrice" value="{{totalPrice}}" readonly>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <p align="center">Accepted payment methods:</p>
      <p><i class="fab fa-cc-visa zoom"></i><i class="fab fa-apple-pay zoom"></i><i class="fab fa-cc-mastercard zoom"></i><i class="fab fa-cc-paypal zoom"></i>
      <i class="fab fa-amazon-pay zoom"></i></p>
    </div>
  </div>
  <button type="submit" class="btn btn-lg btn-success" style="width: 100%;">Finish order <i class="far fa-check-circle"></i></button>
</form>
</div>
{{/if}}