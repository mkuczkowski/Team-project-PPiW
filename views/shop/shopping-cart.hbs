<div class="jumbotron cart-list" style="padding-top: 8%;">
{{# if products }}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      {{# each products }}
         <li class="list-group-item">
          <span class="badge">{{this.item.price}} €</span>
          <span class="label label-success"> {{this.quantity}} x</span>
          <strong><span class="label label-success"> {{this.item.title}}</span></strong>
          <div class="btn-group">
            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="/reduce/{{this.item._id}}">Delete one</a></li>
              <li><a href="/remove/{{this.item._id}}">Remove all</a></li>
            </ul>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <strong>Total: {{totalPrice}} €</strong>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <form action="/checkout" method="POST">
      <button type="submit" class="btn btn-lg btn-success">Checkout <i class="far fa-check-circle"></i></button>
      <a class="btn btn-lg btn-danger pull-right" href="/empty">Empty your cart <i class="fas fa-trash-alt"></i></a>
    </form>
  </div>
</div>
{{else}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h2>Your cart is empty</h2>
  </div>
</div>
{{/if}}
</div>