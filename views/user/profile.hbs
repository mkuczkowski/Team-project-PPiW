<div class="jumbotron">
<div class="row">
    <div class="col-md-8 col-md-offset-3">
        <h1>Welcome back {{name}}</h1>
        <hr>
        <h2>My orders</h2>
        {{# each orders }}
        <div class="panel panel-default">
            <div class="panel-body">
                <ul class="list-group">
                    {{# each this.items }}
                    <li class="list-group-item">
                        <span class="badge">{{ this.price }} €</span>
                         {{this.quantity}} x  {{this.item.title}}
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="panel-footer">Money spent: {{ this.cart.totalPrice }} €</div>
        </div>
        {{/each}}
    </div>
</div>
</div>